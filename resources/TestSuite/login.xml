<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Verify Login Logout functionality">
    <test name="Login Tests">
        <groups>
            <run>
                <include name="login"></include>
            </run>
        </groups>
        <classes>
            <class name="LoginLogout.InvalidUser" />
            <class name="LoginLogout.LoginUser" />
            <class name="LoginLogout.RegisterExistingUser" />
            <class name="LoginLogout.RegisterUser" />
            <class name="LoginLogout.VerifyLogout" />
        </classes>
    </test>
</suite>